import React, { useState, useEffect } from 'react';
import { base44 } from '@/api/base44Client';
import { useQuery } from '@tanstack/react-query';
import { Link } from 'react-router-dom';
import { createPageUrl } from '@/utils';
import { Card } from '@/components/ui/card';
import { Button } from '@/components/ui/button';
import { Input } from '@/components/ui/input';
import { Label } from '@/components/ui/label';
import { Textarea } from '@/components/ui/textarea';
import { Select, SelectContent, SelectItem, SelectTrigger, SelectValue } from '@/components/ui/select';
import { 
  ArrowLeft, 
  Save, 
  Loader2,
  Camera,
  CheckCircle
} from 'lucide-react';
import ToggleButton from '@/components/scouting/ToggleButton';
import OfflineIndicator from '@/components/scouting/OfflineIndicator';
import { useOfflineStorage } from '@/components/scouting/useOfflineStorage';
import { toast } from 'sonner';

const initialFormState = {
  team_number: '',
  drivetrain: '',
  motor_type: '',
  can_score_amp: false,
  can_score_speaker: false,
  can_score_trap: false,
  can_climb: false,
  can_harmony: false,
  auto_capabilities: '',
  robot_weight: '',
  robot_height: '',
  intake_type: '',
  shooting_mechanism: '',
  programming_language: '',
  robot_image_url: '',
  notes: '',
  scouter_name: ''
};

export default function PitScout() {
  const [form, setForm] = useState(initialFormState);
  const [saving, setSaving] = useState(false);
  const [saved, setSaved] = useState(false);
  const [uploading, setUploading] = useState(false);
  const { savePitScout, isOnline } = useOfflineStorage();

  const { data: activeEvent } = useQuery({
    queryKey: ['activeEvent'],
    queryFn: async () => {
      const events = await base44.entities.Event.filter({ is_active: true });
      return events[0] || null;
    }
  });

  useEffect(() => {
    const settings = JSON.parse(localStorage.getItem('scoutingSettings') || '{}');
    if (settings.scouter_name) {
      setForm(f => ({ ...f, scouter_name: settings.scouter_name }));
    }
  }, []);

  const updateForm = (field, value) => {
    setForm(prev => ({ ...prev, [field]: value }));
  };

  const handleImageUpload = async (e) => {
    const file = e.target.files?.[0];
    if (!file) return;

    setUploading(true);
    try {
      const { file_url } = await base44.integrations.Core.UploadFile({ file });
      updateForm('robot_image_url', file_url);
      toast.success('Image uploaded!');
    } catch (error) {
      toast.error('Failed to upload image');
    } finally {
      setUploading(false);
    }
  };

  const handleSubmit = async () => {
    if (!form.team_number) {
      toast.error('Please enter team number');
      return;
    }

    setSaving(true);
    try {
      await savePitScout({
        ...form,
        event_key: activeEvent?.event_key,
        team_number: parseInt(form.team_number),
        robot_weight: form.robot_weight ? parseFloat(form.robot_weight) : null,
        robot_height: form.robot_height ? parseFloat(form.robot_height) : null
      });
      
      setSaved(true);
      toast.success(isOnline ? 'Pit scout saved!' : 'Saved offline - will sync when online');
      
      setTimeout(() => {
        setForm(initialFormState);
        setSaved(false);
        const settings = JSON.parse(localStorage.getItem('scoutingSettings') || '{}');
        if (settings.scouter_name) {
          setForm(f => ({ ...f, scouter_name: settings.scouter_name }));
        }
      }, 1500);
    } catch (error) {
      toast.error('Failed to save pit scout');
    } finally {
      setSaving(false);
    }
  };

  if (saved) {
    return (
      <div className="min-h-screen bg-slate-950 flex items-center justify-center p-4">
        <div className="text-center">
          <div className="w-20 h-20 rounded-full bg-emerald-500/20 flex items-center justify-center mx-auto mb-4">
            <CheckCircle className="w-10 h-10 text-emerald-400" />
          </div>
          <h2 className="text-xl font-bold text-white mb-2">Pit Scout Saved!</h2>
          <p className="text-slate-400">Ready for next team...</p>
        </div>
      </div>
    );
  }

  return (
    <div className="min-h-screen bg-slate-950 text-white pb-24">
      {/* Header */}
      <div className="sticky top-0 bg-slate-950/95 backdrop-blur border-b border-slate-800 z-10">
        <div className="max-w-lg mx-auto px-4 py-3 flex items-center justify-between">
          <Link to={createPageUrl('Home')}>
            <Button variant="ghost" size="icon" className="text-slate-400">
              <ArrowLeft className="w-5 h-5" />
            </Button>
          </Link>
          <h1 className="font-semibold">Pit Scout</h1>
          <OfflineIndicator />
        </div>
      </div>

      <div className="max-w-lg mx-auto px-4 py-4 space-y-4">
        {/* Team Number */}
        <Card className="bg-slate-800/50 border-slate-700/50 p-4">
          <Label className="text-slate-400 text-xs">Team Number</Label>
          <Input
            type="number"
            value={form.team_number}
            onChange={(e) => updateForm('team_number', e.target.value)}
            className="bg-slate-900 border-slate-700 text-white text-2xl font-bold h-14"
            placeholder="254"
          />
        </Card>

        {/* Robot Photo */}
        <Card className="bg-slate-800/50 border-slate-700/50 p-4">
          <Label className="text-slate-400 text-xs mb-2 block">Robot Photo</Label>
          {form.robot_image_url ? (
            <div className="relative">
              <img 
                src={form.robot_image_url} 
                alt="Robot" 
                className="w-full h-48 object-cover rounded-lg"
              />
              <Button
                type="button"
                size="sm"
                className="absolute bottom-2 right-2 bg-slate-900/80"
                onClick={() => updateForm('robot_image_url', '')}
              >
                Remove
              </Button>
            </div>
          ) : (
            <label className="flex flex-col items-center justify-center h-32 border-2 border-dashed border-slate-600 rounded-lg cursor-pointer hover:bg-slate-800/50 transition-colors">
              <input
                type="file"
                accept="image/*"
                capture="environment"
                onChange={handleImageUpload}
                className="hidden"
              />
              {uploading ? (
                <Loader2 className="w-8 h-8 text-slate-400 animate-spin" />
              ) : (
                <>
                  <Camera className="w-8 h-8 text-slate-400 mb-2" />
                  <span className="text-sm text-slate-400">Take or upload photo</span>
                </>
              )}
            </label>
          )}
        </Card>

        {/* Drivetrain */}
        <Card className="bg-slate-800/50 border-slate-700/50 p-4">
          <Label className="text-slate-400 text-xs mb-2 block">Drivetrain</Label>
          <div className="grid grid-cols-2 gap-2">
            {['Swerve', 'Tank', 'Mecanum', 'Other'].map(type => (
              <Button
                key={type}
                type="button"
                className={`${
                  form.drivetrain === type 
                    ? 'bg-blue-600 text-white' 
                    : 'bg-slate-800 text-slate-300 border border-slate-700'
                }`}
                onClick={() => updateForm('drivetrain', type)}
              >
                {type}
              </Button>
            ))}
          </div>
        </Card>

        {/* Capabilities */}
        <Card className="bg-slate-800/50 border-slate-700/50 p-4 space-y-3">
          <Label className="text-slate-400 text-xs">Scoring Capabilities</Label>
          <ToggleButton
            label="Can Score Amp"
            value={form.can_score_amp}
            onChange={(v) => updateForm('can_score_amp', v)}
            color="green"
          />
          <ToggleButton
            label="Can Score Speaker"
            value={form.can_score_speaker}
            onChange={(v) => updateForm('can_score_speaker', v)}
            color="green"
          />
          <ToggleButton
            label="Can Score Trap"
            value={form.can_score_trap}
            onChange={(v) => updateForm('can_score_trap', v)}
            color="green"
          />
          <ToggleButton
            label="Can Climb"
            value={form.can_climb}
            onChange={(v) => updateForm('can_climb', v)}
            color="green"
          />
          <ToggleButton
            label="Can Harmony"
            value={form.can_harmony}
            onChange={(v) => updateForm('can_harmony', v)}
            color="green"
          />
        </Card>

        {/* Specs */}
        <Card className="bg-slate-800/50 border-slate-700/50 p-4 space-y-3">
          <Label className="text-slate-400 text-xs">Robot Specs</Label>
          <div className="grid grid-cols-2 gap-3">
            <div>
              <Label className="text-slate-500 text-xs">Weight (lbs)</Label>
              <Input
                type="number"
                value={form.robot_weight}
                onChange={(e) => updateForm('robot_weight', e.target.value)}
                className="bg-slate-900 border-slate-700 text-white"
                placeholder="120"
              />
            </div>
            <div>
              <Label className="text-slate-500 text-xs">Height (in)</Label>
              <Input
                type="number"
                value={form.robot_height}
                onChange={(e) => updateForm('robot_height', e.target.value)}
                className="bg-slate-900 border-slate-700 text-white"
                placeholder="48"
              />
            </div>
          </div>
          
          <div>
            <Label className="text-slate-500 text-xs">Motor Type</Label>
            <Input
              value={form.motor_type}
              onChange={(e) => updateForm('motor_type', e.target.value)}
              className="bg-slate-900 border-slate-700 text-white"
              placeholder="e.g., Falcon 500, NEO"
            />
          </div>

          <div>
            <Label className="text-slate-500 text-xs">Intake Type</Label>
            <Input
              value={form.intake_type}
              onChange={(e) => updateForm('intake_type', e.target.value)}
              className="bg-slate-900 border-slate-700 text-white"
              placeholder="e.g., Over-the-bumper, under"
            />
          </div>

          <div>
            <Label className="text-slate-500 text-xs">Shooting Mechanism</Label>
            <Input
              value={form.shooting_mechanism}
              onChange={(e) => updateForm('shooting_mechanism', e.target.value)}
              className="bg-slate-900 border-slate-700 text-white"
              placeholder="e.g., Flywheel, catapult"
            />
          </div>

          <div>
            <Label className="text-slate-500 text-xs">Programming Language</Label>
            <Select value={form.programming_language} onValueChange={(v) => updateForm('programming_language', v)}>
              <SelectTrigger className="bg-slate-900 border-slate-700 text-white">
                <SelectValue placeholder="Select..." />
              </SelectTrigger>
              <SelectContent>
                <SelectItem value="Java">Java</SelectItem>
                <SelectItem value="C++">C++</SelectItem>
                <SelectItem value="Python">Python</SelectItem>
                <SelectItem value="LabVIEW">LabVIEW</SelectItem>
                <SelectItem value="Other">Other</SelectItem>
              </SelectContent>
            </Select>
          </div>
        </Card>

        {/* Auto */}
        <Card className="bg-slate-800/50 border-slate-700/50 p-4">
          <Label className="text-slate-400 text-xs">Auto Capabilities</Label>
          <Textarea
            value={form.auto_capabilities}
            onChange={(e) => updateForm('auto_capabilities', e.target.value)}
            className="bg-slate-900 border-slate-700 text-white mt-2"
            placeholder="Describe their auto routines..."
            rows={3}
          />
        </Card>

        {/* Notes */}
        <Card className="bg-slate-800/50 border-slate-700/50 p-4">
          <Label className="text-slate-400 text-xs">Additional Notes</Label>
          <Textarea
            value={form.notes}
            onChange={(e) => updateForm('notes', e.target.value)}
            className="bg-slate-900 border-slate-700 text-white mt-2"
            placeholder="Any other observations..."
            rows={3}
          />
        </Card>

        {/* Scouter */}
        <Card className="bg-slate-800/50 border-slate-700/50 p-4">
          <Label className="text-slate-400 text-xs">Scouter Name</Label>
          <Input
            value={form.scouter_name}
            onChange={(e) => updateForm('scouter_name', e.target.value)}
            className="bg-slate-900 border-slate-700 text-white mt-1"
            placeholder="Your name"
          />
        </Card>
      </div>

      {/* Submit Button */}
      <div className="fixed bottom-0 left-0 right-0 bg-slate-950/95 backdrop-blur border-t border-slate-800 p-4">
        <div className="max-w-lg mx-auto">
          <Button
            onClick={handleSubmit}
            disabled={saving || !form.team_number}
            className="w-full h-14 bg-emerald-600 hover:bg-emerald-700 text-lg font-semibold"
          >
            {saving ? (
              <>
                <Loader2 className="w-5 h-5 mr-2 animate-spin" />
                Saving...
              </>
            ) : (
              <>
                <Save className="w-5 h-5 mr-2" />
                Save Pit Scout
              </>
            )}
          </Button>
        </div>
      </div>
    </div>
  );
}
